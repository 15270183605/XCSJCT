<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <RelativeLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:background="#5886b8"
     android:gravity="center_vertical"
     >
     <ImageView
         android:id="@+id/bank" 
         android:layout_width="15dp"
         android:layout_height="18dp"
         android:src="@drawable/backshouye"
         android:layout_marginLeft="10dp"
         />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="返回"
       android:textColor="#ffffff"
       android:layout_marginLeft="3dp"
       android:textSize="14sp"
       android:layout_toRightOf="@+id/bank"
       />  
          <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="编辑资料"
       android:textColor="#ffffff"
       android:textStyle="bold"   
       android:layout_centerHorizontal="true"
          />  
     
           
 </RelativeLayout> 
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:background="#e5e5e5"
     >
    
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     >
     <TextView 
         
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="姓    名:"
           android:textSize="13sp"
           android:layout_marginLeft="13dp"
           />
     <TextView 
            android:id="@+id/EditName"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="13sp" 
            android:background="@null"
            android:layout_marginLeft="40dp"
      />
 </LinearLayout>
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
   android:gravity="center_vertical"
     >
     <TextView 
          
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="昵    称:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           />
     <EditText 
            android:id="@+id/EditNickName"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:hint="昵称"
            android:textSize="13sp" 
            android:background="@null"
            android:layout_marginLeft="40dp"
      />
 </LinearLayout>
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     >
     <TextView 
    
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="号    码:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           />
     <EditText 
            android:id="@+id/EditTele"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:hint="电话号码"
            android:textSize="13sp" 
            android:background="@null"
            android:layout_marginLeft="40dp"
      />
 </LinearLayout>
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     >
     <TextView 
          
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="薪    资:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           />
     <EditText 
            android:id="@+id/EditSalary"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:hint="薪资"
            android:textSize="13sp" 
            android:background="@null"
            android:layout_marginLeft="40dp"
      />
 </LinearLayout>
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     >
     <TextView 
         
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="状    态:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           
           />
     <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp">

            <RadioButton
                android:id="@+id/radioInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:textSize="12sp"
                android:text="在职" 
                android:textColor="@android:color/holo_blue_bright"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不在职" 
                android:textSize="12sp"
                android:onClick="click"
                android:textColor="@android:color/holo_blue_bright"/>

            
        </RadioGroup>
 </LinearLayout>
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="50dp"
     android:orientation="horizontal"
    android:gravity="center_vertical"
     >
     <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="二维码:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           />
     <ImageView 
            android:id="@+id/MyCode"
            android:layout_width="45dp"
             android:layout_height="45dp"
          android:src="@drawable/people"
            android:layout_marginLeft="40dp"
      />
 </LinearLayout>
 <View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
    android:gravity="center_vertical"
     >
     <TextView 
          
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="头    像:"
           android:textSize="13sp"
           android:layout_marginLeft="15dp"
           />
     <ImageView
            android:id="@+id/headImage"
            android:layout_width="50dp"
             android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/imagev"
      />
      <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="[点击头像可以更改头像哦!]"
           android:textSize="10sp"
           android:layout_marginLeft="15dp"
           android:textColor="#ff0000"
           />
 </LinearLayout>
<View 
         android:layout_width="fill_parent"
         android:layout_height="0.4dp"
         android:background="#ffffff"
         />
 <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginTop="40dp"
     >
     <TextView 
          android:id="@+id/Reset"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="重置"
           android:textSize="16sp"
           android:layout_marginLeft="100dp"
           />
     <TextView 
            android:id="@+id/Save"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
          android:text="保存"
            android:textSize="16sp" 
            android:background="@null"
            android:layout_marginLeft="80dp"
      />
 </LinearLayout>
 
 </LinearLayout>
 
</LinearLayout>
