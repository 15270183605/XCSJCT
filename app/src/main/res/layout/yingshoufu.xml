<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#f4eded">
    <LinearLayout 
        android:id="@+id/shoufu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
         android:gravity="center"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/textTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款录入"
                android:textSize="16sp"
                android:textColor="#ff0000"
               
                />
            
        </LinearLayout>
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
      
        >
        <RadioGroup
            android:id="@+id/TextGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:textSize="12sp"
                android:text="红字" 
               android:layout_marginLeft="40dp"
               android:checked="true"
                android:textColor="@android:color/holo_blue_bright"/>

            <RadioButton
                android:id="@+id/BlueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝字" 
                android:textSize="12sp"
                android:onClick="click"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_marginLeft="42dp"/>
          </RadioGroup>
    </LinearLayout>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
        android:gravity="center"
         android:layout_marginTop="18dp"
         android:orientation="horizontal"
          >
        <TextView
             android:id="@+id/YingShouIdTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="编号:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />
         <TextView
             android:id="@+id/yingshouId"
             android:layout_width="100dp"
             android:layout_height="26dp"
           
             android:background="@drawable/edittextbackground"
             android:layout_marginLeft="6dp"
             android:textSize="14sp" />
<RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="30dp"
        android:layout_marginLeft="13dp"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/shouorfuclass"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/shouorfumakemenu1"
             android:background="@drawable/edittextbackground"
             android:ems="10"
             android:layout_marginLeft="6dp"
             android:textSize="14sp" />

         <TextView
             android:id="@+id/shouorfumakemenu1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:layout_alignParentLeft="true"
             android:text="单别:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

     </RelativeLayout>
         

     </LinearLayout>
    
           <LinearLayout 
    android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
        android:gravity="center">
      <RelativeLayout 
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:orientation="horizontal"
         >

          <TextView
              android:id="@+id/amount"
              android:layout_width="28dp"
              android:layout_height="30dp"
              android:text="借款金额:"
              android:textColor="@android:color/holo_green_dark"
              android:textSize="12sp" />

         <EditText
             android:id="@+id/shouorfuamount"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="6dp"
             android:layout_toRightOf="@+id/amount"
             android:background="@drawable/edittextbackground"
             android:ems="10"
             android:textSize="14sp" >

             
         </EditText>
<RelativeLayout
         android:id="@+id/shouObjectTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="13dp"
         android:layout_toRightOf="@+id/shouorfuamount"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/shousource"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/shoumakemenu2"
             android:background="@drawable/edittextbackground"
             android:ems="10"
             android:textSize="14sp"
             android:layout_marginLeft="6dp" />

        <tool.CircleImageView
             android:id="@+id/shouimage2"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_alignRight="@+id/shousource"
             android:layout_centerVertical="true"
             android:src="@drawable/loaction" />

         <TextView
             android:id="@+id/shoumakemenu2"
             android:layout_width="28dp"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:text="借款来源:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

     </RelativeLayout>
     </RelativeLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
        android:gravity="center">
      <RelativeLayout
          android:id="@+id/shouObjectTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         
          android:orientation="horizontal" >

          <EditText
              android:id="@+id/shouobject"
              android:layout_width="100dp"
              android:layout_height="26dp"
              android:layout_marginLeft="6dp"
              android:layout_toRightOf="@+id/shoumakemenu3"
              android:background="@drawable/edittextbackground"
              android:ems="10"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/shoumakemenu3"
              android:layout_width="28dp"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:text="借款对象:"
              android:textColor="@android:color/holo_green_dark"
              android:textSize="12sp" />

          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="13dp"
              android:layout_toRightOf="@+id/shouobject"
              android:orientation="horizontal" >

              <EditText
                  android:id="@+id/shouorfumakemenuperson"
                  android:layout_width="100dp"
                  android:layout_height="28dp"
                  android:layout_alignParentTop="true"
                  android:layout_marginLeft="6dp"
                  android:layout_toRightOf="@+id/shouorfumakemenu"
                  android:background="@drawable/edittextbackground"
                  android:ems="10"
                  android:textSize="14sp" />

              <tool.CircleImageView
                  android:id="@+id/yingshoufuimage3"
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:layout_alignRight="@+id/shouorfumakemenuperson"
                  android:layout_centerVertical="true"
                  android:src="@drawable/loaction" />

              <TextView
                  android:id="@+id/shouorfumakemenu"
                  android:layout_width="28dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:text="制单人:"
                  android:textColor="@android:color/holo_green_dark"
                  android:textSize="12sp" />
          </RelativeLayout>
      </RelativeLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
        android:gravity="center">
<RelativeLayout
         android:id="@+id/shouTelephone"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         
         android:orientation="horizontal" >

         <EditText
             android:id="@+id/objecttelephone"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/shoumakemenu4"
             android:background="@drawable/edittextbackground"
             android:ems="10"
             android:textSize="14sp"
             android:hint="借款方"
             android:layout_marginLeft="6dp" />

        

         <TextView
             android:id="@+id/shoumakemenu4"
             android:layout_width="28dp"
             android:layout_height="wrap_content"
             
             android:layout_alignParentLeft="true"
             android:text="电话号码:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />
<RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="13dp"
         android:layout_toRightOf="@+id/objecttelephone"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/shouorfumaketime"
             android:layout_width="100dp"
             android:layout_height="28dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/shouorfumakemenu4"
             android:background="@drawable/edittextbackground"
             android:ems="10"
             android:textSize="14sp" 
             android:layout_marginLeft="6dp"/>

         <tool.CircleImageView
             android:id="@+id/shouorfuimage4"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_alignRight="@+id/shouorfumaketime"
             android:layout_centerVertical="true"
             android:src="@drawable/calendar" />

         <TextView
             android:id="@+id/shouorfumakemenu4"
             android:layout_width="28dp"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:text="制单时间:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

         

     </RelativeLayout>
     </RelativeLayout>
     
 </LinearLayout>

      <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="26dp"
        android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="备注 :"
             android:textSize="12sp"
             android:textColor="@android:color/holo_green_dark"
             
             />
         <EditText 
             android:id="@+id/shouorfumakenote"
             android:layout_width="245dp"
             android:layout_height="26dp"
             android:textSize="14sp"
             android:background="@drawable/edittextbackground"
             android:layout_marginLeft="6dp"
             />
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:gravity="center"
         >
         <CheckBox 
             android:id="@+id/AddCheckBox"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="连续添加"
             android:textSize="12sp"
             
             />
     </LinearLayout>
     <LinearLayout 
          android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:gravity="center"
         >
        <Button 
            android:id="@+id/shouorfuSave"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="制单"
            android:textSize="8sp"
             android:background="@drawable/buttonshape"
             
            /> 
          <Button 
              android:id="@+id/shouorfuExit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="退出"
            android:textSize="8sp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/buttonshape"
            /> 
     </LinearLayout>      
    </LinearLayout>
<ListView 
    android:id="@+id/AddYingShouFuData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    ></ListView>
</LinearLayout>
