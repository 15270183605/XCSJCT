<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<View 
    android:layout_width="match_parent"
    android:layout_height="0.3dp"
    android:background="#000000"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
      <View
            android:id="@+id/view1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        
        <LinearLayout
            android:layout_toRightOf="@+id/view1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" 
            android:id="@+id/Layout1">

            <TextView
                android:id="@+id/DataAnalysisText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分析指标"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_toRightOf="@+id/Layout1"
             android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <LinearLayout
             android:id="@+id/Layout2"
             android:layout_toRightOf="@+id/view2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                  android:id="@+id/DataAnalysisText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算公式"
                android:textSize="13sp" />
        </LinearLayout>

        <View
             android:layout_toRightOf="@+id/Layout2"
             android:id="@+id/view3"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
 <LinearLayout
      android:layout_toRightOf="@+id/view3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" 
             android:id="@+id/Layout3">
        
        <TextView
               android:id="@+id/DataAnalysisText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比率"
            android:textColor="#ff0000"
            android:textSize="13sp" />
 </LinearLayout>
        <View
              android:layout_toRightOf="@+id/Layout3"
              android:id="@+id/view4"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
         <LinearLayout
      android:layout_toRightOf="@+id/view4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" 
             android:id="@+id/Layout4">
        
        <TextView
               android:id="@+id/DataAnalysisText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参考值"
            android:textColor="#ff0000"
            android:textSize="13sp" />
 </LinearLayout>
        <View
              android:layout_toRightOf="@+id/Layout4"
              android:id="@+id/view5"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
 <LinearLayout
       android:id="@+id/Layout5"
      android:layout_toRightOf="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" >
        <TextView
               android:id="@+id/DataAnalysisText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结果"
            android:textColor="#3f48cc"
            android:textSize="13sp" />
         </LinearLayout>
          <View
              
              android:layout_alignParentRight="true"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
 
    </RelativeLayout>

</LinearLayout>