<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f4eded"
    >
    <LinearLayout 
        android:id="@+id/shouru"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            >
            <TextView 
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入录入"
                android:textSize="16sp"
                android:textColor="#ff0000"
                android:layout_centerInParent="true"
                />
            <ImageView 
                android:id="@+id/incomepayLuYin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/luyin2"
              android:layout_marginLeft="30dp"
              android:layout_toRightOf="@+id/textTitle"
                />
     </RelativeLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[格式：用途+'金额'+金额]"
                android:textColor="#ff0000"
                android:textSize="8sp"
                android:layout_marginLeft="220dp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             android:layout_marginTop="30dp"
            ></LinearLayout>
        <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal"
        
          >
       <TextView
             android:id="@+id/incomeIdTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="编号     :"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />
         <TextView
             android:id="@+id/incomeId"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:gravity="center_vertical"
             android:layout_marginLeft="10dp"
             android:textSize="14sp" 
             android:background="@drawable/edittextbackground"/>

        <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:orientation="horizontal"
         android:gravity="center_vertical" >

         <TextView
             android:id="@+id/incomeclass"
             android:layout_width="100dp"
             android:layout_height="26dp"
            android:background="@drawable/edittextbackground"
             android:layout_toRightOf="@+id/incomemakemenu1"
             android:ems="10"
             android:layout_marginLeft="10dp"
             android:textSize="14sp" />

         <TextView
             android:id="@+id/incomemakemenu1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:text="单别:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

     </RelativeLayout> 

     </LinearLayout>
    
           
      <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="金额     :"
             android:textSize="12sp"
             android:textColor="@android:color/holo_green_dark"
             
             />
         <EditText 
             android:id="@+id/incomeamount"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:textSize="14sp"
             android:background="@drawable/edittextbackground"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical"
             />
         <RelativeLayout
         android:id="@+id/incomeSourceTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/incomesource"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/incomemakemenu2"
             android:ems="10"
             android:textSize="14sp"
             android:layout_marginLeft="10dp" 
             android:background="@drawable/edittextbackground"
             android:gravity="center_vertical"/>

         <tool.CircleImageView
             android:id="@+id/incomeimage2"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_alignRight="@+id/incomesource"
             android:layout_centerVertical="true"
             android:src="@drawable/loaction" />

         <TextView
             android:id="@+id/incomemakemenu2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/incomesource"
             android:layout_alignBottom="@+id/incomesource"
             android:layout_alignParentLeft="true"
             android:text="来源:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

     </RelativeLayout>
     </LinearLayout>
     
<LinearLayout 
    android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
        android:gravity="center">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

         <EditText
             android:id="@+id/makemenuperson"
             android:layout_width="100dp"
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/makemenu"
            android:background="@drawable/edittextbackground"
             android:ems="10"
             android:textSize="14sp" 
             android:layout_marginLeft="10dp"/>

         <tool.CircleImageView
             android:id="@+id/Makemenupeople"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_alignRight="@+id/makemenuperson"
             android:layout_centerVertical="true"
             android:src="@drawable/loaction" />

         <TextView
             android:id="@+id/makemenu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/makemenuperson"
             android:layout_alignBottom="@+id/makemenuperson"
             android:layout_alignParentLeft="true"
             android:text="制单人:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/incomemaketime"
             android:layout_width="100dp" 
             android:layout_height="26dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/makemenu4"
             android:ems="10"
             android:textSize="14sp" 
             android:background="@drawable/edittextbackground"/>

         <tool.CircleImageView
             android:id="@+id/MakeTime"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_alignRight="@+id/incomemaketime"
             android:layout_centerVertical="true"
             android:src="@drawable/calendar" />

         <TextView
             android:id="@+id/makemenu4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/incomemaketime"
             android:layout_alignBottom="@+id/incomemaketime"
             android:layout_alignParentLeft="true"
             android:text="时间:"
             android:textColor="@android:color/holo_green_dark"
             android:textSize="12sp" />

        

     </RelativeLayout>
</LinearLayout>
     

      <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
         android:gravity="center"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="备注     :"
             android:textSize="12sp"
             android:textColor="@android:color/holo_green_dark"
             
             />
         <EditText 
             android:id="@+id/incomemakenote"
             android:layout_width="246dp"
             android:layout_height="26dp"
             android:textSize="14sp"
            android:background="@drawable/edittextbackground"
             android:layout_marginLeft="8dp"
             />
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:gravity="center"
         >
         <CheckBox 
             android:id="@+id/AddCheckBox"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="连续添加"
             android:textSize="12sp"
             
             />
     </LinearLayout>
     <LinearLayout 
          android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="15dp"
        android:gravity="center"
         >
        <Button 
            android:id="@+id/Save"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="制单"
            android:textSize="12sp"
             android:background="@drawable/buttonshape"
             
            /> 
          <Button 
              android:id="@+id/Exit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="退出"
            android:textSize="12sp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/buttonshape"
            /> 
     </LinearLayout>      
    </LinearLayout>
<ListView 
    android:id="@+id/AddDataListView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    ></ListView>
</LinearLayout>
