<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e5e5e5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/putongpost"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/NoLockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未锁定**"
                android:textColor="#00a8f3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/jinjipost"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/NoHeXiaoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未核销**"
                android:textColor="#0ed145" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@+id/View1"
            android:background="@drawable/putongpost"
            android:orientation="vertical" >

            <tool.MyListView
                android:id="@+id/JieZhangLockListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="53dp" />
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/JieZhangLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键锁定"
                    android:textColor="#ff0000"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/View1"
            android:background="@drawable/jinjipost"
            android:orientation="vertical" >

            <tool.MyListView
                android:id="@+id/JieZhangHeXiaoListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="53dp" />
           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/JieZhangHeXiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键核销"
                    android:textColor="#ff0000"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/View1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
          
            android:id="@+id/JieZhangBottomLayout">

            <TextView
                android:id="@+id/JieZhangTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结账"
                android:textColor="#ff0000"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/JieZhangStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:text="未结账"
            android:textColor="#ff0000"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
