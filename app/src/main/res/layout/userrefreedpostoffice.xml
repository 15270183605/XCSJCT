<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <View 
     android:layout_width="match_parent"
     android:layout_marginLeft="3dp"
     android:layout_marginRight="3dp"
     android:layout_height="0.7dp"
     android:layout_marginTop="7dp"
     android:background="#000000"
     />
 <View 
     android:layout_width="0.7dp"
     android:layout_marginTop="7dp"
     android:layout_marginBottom="7dp"
     android:layout_height="match_parent"
     android:background="#000000"
     android:layout_marginLeft="3dp"
     />
  <View 
     android:layout_width="0.7dp"
     android:layout_marginTop="7dp"
     android:layout_marginBottom="7dp"
     android:layout_height="match_parent"
     android:layout_marginRight="3dp"
     android:background="#000000"
     android:layout_alignParentRight="true"
     /> 
     <View 
     android:layout_width="match_parent"
     android:layout_marginLeft="3dp"
     android:layout_marginRight="3dp"
     android:layout_height="0.7dp"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="7dp"
     android:background="#000000"
     />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    >
    <Button 
        android:id="@+id/PuTongPost"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="普通邮件"
        android:textSize="13sp"
        android:background="@drawable/putongpost"
        />
    <Button 
        android:id="@+id/JinJiPost"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="紧急邮件"
        android:textSize="13sp"
        android:background="@drawable/jinjipost"
        android:layout_marginLeft="5dp"
        />
    
</LinearLayout>
<LinearLayout 
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:background="#b3cae0"
    android:layout_marginTop="40dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    >
    <Button 
        android:id="@+id/SendPost"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="发送"
        android:textSize="12sp"
        android:background="@drawable/sendbuttonbackground"
        android:layout_marginLeft="5dp"
        />
    <Button 
        android:id="@+id/SavePost"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="存草稿"
        android:textSize="12sp"
        android:background="@drawable/sendbuttonbackground"
        android:layout_marginLeft="8dp"
        />
    <Button 
        android:id="@+id/ClosePost"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="关闭"
        android:textSize="12sp"
        android:background="@drawable/sendbuttonbackground"
        android:layout_marginLeft="8dp"
        />
</LinearLayout>
<LinearLayout 
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
      android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="12dp"
         android:background="#ddebf8"
         android:layout_below="@+id/Layout"
         android:layout_marginTop="1dp"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            />
        <EditText 
            android:id="@+id/ShouEditTxet"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:layout_height="20dp"
            android:hint="格式为@qq.com"
            android:textSize="12sp"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主    题"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            />
        <EditText 
            android:id="@+id/TitleEditTxet"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:layout_height="20dp"
            android:hint="写您反馈的主题"
            android:textSize="12sp"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正    文"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout 
      
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
           android:layout_marginBottom="6dp"
            >
        <EditText 
            android:id="@+id/ContentEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="详细写出您遇到的问题(200字以内)"
            android:textSize="14sp"
           android:background="#ffffff"
            />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
</RelativeLayout>
