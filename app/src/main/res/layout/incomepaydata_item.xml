<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fdeca6">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout 
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    
    <LinearLayout 
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="编号:"
         android:textSize="12sp"
        android:layout_marginLeft="40dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayId"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="编号:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
         android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="单别:"
         android:textSize="12sp"
         android:layout_marginLeft="40dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayCLass"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="单别:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    <LinearLayout 
       android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="金额:"
         android:textSize="12sp"
        android:layout_marginLeft="40dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayCount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="金额:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        
        >
     <TextView 
         android:id="@+id/incomepayTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="来源:"
         android:textSize="12sp"
         android:layout_marginLeft="40dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayResource"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="来源:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    
</LinearLayout>

 <LinearLayout 
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout 
       android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="制单人:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayPeople"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="制单人:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
      
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="制单时间:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="制单时间:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
        
          android:textColor="#ff0000"
         />   
        
    
</LinearLayout>
    <LinearLayout 
      android:layout_width="140dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="状态:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayStatus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="状态:"
         android:textSize="12sp"
        android:layout_marginLeft="10dp"
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="单据备注:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
          android:textColor="@android:color/holo_green_dark"
         />   
         <TextView 
          android:id="@+id/incomepayNote"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="单据备注:"
         android:textSize="12sp"
         android:layout_marginLeft="10dp"
        
          android:textColor="#ff0000"
         />   
        
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
        >
       <TextView 
            android:id="@+id/showStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示进度"
            android:textSize="13sp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
            />
            
            
       
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/showStatusTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
          android:layout_marginLeft="30dp"
        android:visibility="gone"
          android:layout_marginTop="5dp"
        >
     <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
   
     
     >
      <TextView
    android:id="@+id/Line"
    android:layout_width="168dp"
    android:layout_height="2dp"
    android:background="@android:color/holo_blue_light" 
    android:layout_marginTop="3dp"
    android:layout_marginLeft="40dp"/>
    

<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal" >

    <tool.CircleImageView
        android:id="@+id/point1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/point2" />

    <tool.CircleImageView
        android:id="@+id/point2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/point2" />

    <tool.CircleImageView
        android:id="@+id/point3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/point2" />

    <tool.CircleImageView
        android:id="@+id/point4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/point2" />

    <tool.CircleImageView
        android:id="@+id/point5"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/point2" />

    <!-- <tool.CircleImageView
        android:id="@+id/point6"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/point2" /> -->
</LinearLayout>
</RelativeLayout>
</RelativeLayout>

 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:text="单据开始"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="单据锁定"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="开始入帐"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="入账完成"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="做账结束"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10sp" />

       
    </LinearLayout>
    </LinearLayout>
</LinearLayout>


