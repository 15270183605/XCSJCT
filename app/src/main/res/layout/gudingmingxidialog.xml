<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/edittextbackground"
        >
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton 
                android:id="@+id/ZhengMingXi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益项"
                android:textSize="10sp"
                />
            <RadioButton 
                android:id="@+id/FuMingXi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣除项"
                android:textSize="10sp"
                android:layout_marginLeft="30dp"
                android:textColor="#ff0000"
                />
        </RadioGroup>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView 
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="明细种类:"
                android:textSize="12sp"
                />
            <EditText 
                android:id="@+id/EditMingXiType"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:background="@drawable/edittextbackground"
                android:layout_marginLeft="3sp"
                />
             <TextView 
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="明细金额:"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                />
            <EditText 
                android:id="@+id/EditMingXiCount"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="13sp"
                android:textColor="#ff0000"
                android:gravity="center_vertical"
                android:background="@drawable/edittextbackground"
                android:layout_marginLeft="3sp"
                />
        </LinearLayout>
         <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        >
        <TextView 
            android:id="@+id/AddMingXi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="#ff0000"
            android:textSize="15sp"
           android:layout_toLeftOf="@+id/CancelAdd"
           android:layout_marginRight="30dp"
            />
         <TextView 
            android:id="@+id/CancelAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
          
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
         android:layout_marginTop="20dp"
        >
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center"
             >
        <TextView 
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="定款计算公式"
            android:textSize="12sp"
            />
        <ImageView 
            android:id="@+id/CaulatorImage"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/cal"
            android:layout_marginTop="5sp"
            />
        </LinearLayout>
        <ScrollView 
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittextbackground"
            >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
           
            >
            <TextView 
                android:id="@+id/CalMenthod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="哈哈"
                />
            <TextView 
                android:id="@+id/CalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="哈哈"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
       </ScrollView>
    </LinearLayout>
    
     <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            ></LinearLayout>
    </LinearLayout>

</LinearLayout>
