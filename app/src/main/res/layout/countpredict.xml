<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e5e5e5">
 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/TopLayout"
        android:layout_marginTop="5dp"
        >
        <EditText 
            android:id="@+id/ShouRuPredict"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:textSize="13sp"
            android:textColor="#ff0000"
            android:background="@drawable/edittextbackground"
            android:inputType="number"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入预算"
            android:layout_marginLeft="3dp"
            android:textSize="12sp"
            />
        <EditText 
            android:id="@+id/ZhiChuPredict"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:textSize="13sp"
            android:textColor="#ff0000"
            android:background="@drawable/edittextbackground"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出预算"
            android:layout_marginLeft="3dp"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TopLayout"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/MiddleLayout"
        >
        <TextView 
            android:id="@+id/CanKaoPreData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参考前数据"
            android:textSize="13sp"
            android:textColor="#00a8f3"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/PredictBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
           android:layout_below="@+id/MiddleLayout"
           android:visibility="gone"
        >
    <LinearLayout 
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
      
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前3个月的预期数据"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      
        >
        <ListView 
            android:id="@+id/PredictDataListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dp"
        >
        <TextView 
            android:id="@+id/LookAllPredictData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看所有预算数据"
            android:textSize="13sp"
            android:textColor="#00a8f3"
            />
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/PredictBottomLayout"
        android:layout_marginTop="5dp"
        >
        <TextView 
            android:id="@+id/CountPredictText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预算"
            android:textSize="15sp"
            android:layout_marginRight="80dp"
            android:textColor="#ff0000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/CountPredictCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            
             android:layout_centerVertical="true"
            />
    </RelativeLayout>
</RelativeLayout>
