<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/transparent">
    <LinearLayout 
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/jiazaibackgroundshape"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/PayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
        <ImageView 
            android:id="@+id/ZhiFuImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/weixinzhifu"
            android:layout_marginTop="5dp"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
           <ImageView 
               android:id="@+id/JiaZaiBottom1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/pay_circle"
              
               />
           <ImageView 
                android:id="@+id/JiaZaiBottom2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/pay_bottom_circle"
              android:layout_marginLeft="10dp"
               />
           <ImageView 
                android:id="@+id/JiaZaiBottom3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/pay_bottom_circle"
              android:layout_marginLeft="10dp"
               />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
