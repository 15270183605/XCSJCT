<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/startloadbackground"
        android:id="@+id/StartLoadLayout"
        >
  <RelativeLayout 
      android:id="@+id/startbackground"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="20dp"
      >
<Button 
    android:id="@+id/skip"
    android:layout_width="60dp"
    android:layout_height="26dp"
    android:text="跳过 "
    android:textSize="10sp"
    android:textColor="#ff0000"
    android:textStyle="bold"
    android:visibility="gone"
    android:layout_marginTop="10dp"
    android:background="@drawable/skipshape"
    />
  </RelativeLayout>
  </RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#ffffff"
    android:layout_alignParentBottom="true"
    >
    <ImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bottomimage"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家财通"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            />
         <tool.ShimmerTextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一款便利的理财App"
            android:textSize="13sp"
            android:textColor="#000000"
             android:layout_marginTop="2dp"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
