<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <RelativeLayout 
      android:layout_width="fill_parent"
      android:layout_height="70dp"
      android:orientation="horizontal"
      
      >
      <LinearLayout 
          android:id="@+id/layout1"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginLeft="5dp"
          >
          <ImageView 
              android:id="@+id/Left"
              android:layout_width="10dp"
              android:layout_height="wrap_content"
             android:src="@drawable/left"
              />
      </LinearLayout>
      <LinearLayout 
            android:id="@+id/layout2"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:orientation="vertical"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/layout1"
          >
          <TextView 
              android:id="@+id/viewflipperText1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="点击这里进行期末结账"
              android:textColor="#048fcd"
              android:textSize="14sp"
              android:layout_marginTop="5dp"
              />
         <TextView 
             android:id="@+id/viewflipperText2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="定期结账可以更好的帮你管理财务"
              android:textColor="#b7b7b7"
              android:textSize="12sp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="2dp"
             />
      </LinearLayout>
      <LinearLayout 
          android:id="@+id/layout3"
           android:layout_toRightOf="@+id/layout2"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:orientation="horizontal"
          android:gravity="center"
          
          >
          <ImageView 
              android:id="@+id/viewflipperImage"
              android:layout_width="90dp"
              android:layout_height="50dp"
              android:src="@drawable/count"
              />
          
      </LinearLayout>
       <LinearLayout 
            android:id="@+id/layout4"
           android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginRight="5dp"
          >

           <ImageView
               android:id="@+id/Right"
               android:layout_width="10dp"
               android:layout_height="wrap_content"
               android:src="@drawable/right" />

      </LinearLayout>
  </RelativeLayout>

</LinearLayout>
