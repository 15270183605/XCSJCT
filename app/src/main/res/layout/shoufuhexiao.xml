                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shouorfuclass1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/amount1"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="借款金额:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shouorfuamount1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shouSourceTitle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shoumakemenu21"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="借款来源:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shousource1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/shoumakemenu31"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="借款对象:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shouobject1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shouTelephone1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shoumakemenu41"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="电话号码:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/objecttelephone1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/shouorfumakemenu1"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="制单人:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shouorfumakemenuperson1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:orientation="horizontal" >
 <TextView
                    android:id="@+id/shouorfumakemenu41"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                  
                    android:text="制单时间:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/shouorfumaketime1"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                  android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

             

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态:"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="12sp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:id="@+id/status1"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                       android:layout_marginLeft="5dp"
                        android:background="@drawable/edittextbackground"
                        android:textSize="14sp" />
          </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:gravity="center"
                android:layout_marginTop="26dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfumakenote1"
                    android:layout_width="255dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="8dp"
                    android:background="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" 
                android:gravity="center">

                <Button
                    android:id="@+id/hexiaoButton"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                  
                    android:background="@drawable/edittextbackground"
                    android:text="核销"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/Exit1"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/edittextbackground"
                    android:text="退出"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>