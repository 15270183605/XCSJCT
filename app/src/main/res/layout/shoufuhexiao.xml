<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4eded"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/shoufu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/textTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款单"
                android:textColor="#ff0000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/TextGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红字"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/BlueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="蓝字"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shouorfumakemenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单别:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfuclass"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="借款金额:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfuamount"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:background="@drawable/edittextbackground"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shouSourceTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shoumakemenu2"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="借款来源:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shousource"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/shoumakemenu3"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="借款对象:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouobject"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shouTelephone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shoumakemenu4"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="电话号码:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/objecttelephone"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/shouorfumakemenu"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="制单人:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfumakemenuperson"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shouorfumakemenu4"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="制单时间:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfumaketime"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="状态:"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/status"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittextbackground"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注 :"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/shouorfumakenote"
                    android:layout_width="255dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/edittextbackground"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/lock"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonshape"
                    android:text="锁定"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttonshape"
                    android:text="修改"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/Exit"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/buttonshape"
                    android:text="退出"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shouorfumakemenu11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
