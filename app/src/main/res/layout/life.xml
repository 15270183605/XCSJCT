<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:zsr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="#66ccff"
     >
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:layout_marginLeft="15dp"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:background="@drawable/edittextbackground"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/LifeZhongLei"
         >
         <ImageView 
             android:id="@+id/LifeSeachApply"
             android:layout_width="23dp"
             android:layout_height="23dp"
             android:src="@drawable/searchtext"
             android:layout_marginLeft="3dp"
             android:layout_centerVertical="true"
             />
         <View 
             android:id="@+id/view"
             android:layout_width="0.3dp"
             android:layout_height="match_parent"
             android:background="#000000"
              android:layout_marginLeft="3dp"
              android:layout_toRightOf="@+id/LifeSeachApply"
             />
         <EditText 
             android:layout_toRightOf="@+id/view"
             android:layout_width="217dp"
             android:layout_height="match_parent"
             android:id="@+id/LifeEditApply"
             android:textSize="15sp"
             android:background="@null"
             android:layout_marginLeft="3dp"
             android:hint="搜索应用/扫一扫"
             />
          <ImageView 
             android:id="@+id/LifeSaoApply"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/saoyisao"
             android:layout_marginLeft="3dp"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/LifeEditApply"
             />
    </RelativeLayout>
     <ImageView 
         android:id="@+id/LifeZhongLei"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"
         android:src="@drawable/fenlei"
         />
</RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#e5e5e5"
        >
      <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <viewpagerlib.view.BannerViewPager
                android:id="@+id/LifeBanner"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                zsr:banner_loop_max_count="3"
                zsr:banner_switchtime="600"
                zsr:banner_isloop="true"
                zsr:banner_looptime="3000" />

            <viewpagerlib.indicator.TransIndicator
                android:id="@+id/LifeTran"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                zsr:trans_defaultcolor="@color/gray_cccc"
                zsr:trans_leftmargin="10dp"
                zsr:trans_movecolor="@color/white"
                zsr:trans_type="round"
                zsr:trans_round_radius="4dp"
                zsr:trans_width="15dp"
                zsr:trans_height="5dp"/>
        </FrameLayout>
</LinearLayout>
    <viewpagerlib.indicator.TabIndicator
        android:id="@+id/LifeTab"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/gray_cccc"
        app:tab_color="@color/colorAccent"
        app:tab_width="20dp"
        app:tab_height="2dp"
        app:tab_text_default_color="@color/black_ff"
        app:tab_text_change_color="@color/colorAccent"
        app:tab_show="true"
        app:tab_text_type="normaltext"
        app:tab_textsize="16sp"
        app:visiabel_size="4"
        app:tap_type="rect"
        app:tab_iscanscroll="true"
        />


    <tool.ChildViewPager
        android:id="@+id/Lifeviewpager"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"/>
    

</LinearLayout>
