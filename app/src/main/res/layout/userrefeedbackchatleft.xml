<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e5e5e5" >

    <TextView
        android:id="@+id/TimeLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="星期一14:26"
        android:textColor="#000000"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:orientation="horizontal">
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
        <ImageView
            android:id="@+id/HeadImageLeft"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user" />
        <TextView 
            android:id="@+id/NickNameLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员"
            android:textSize="10sp"
           
            />
       </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:gravity="center_vertical"
              >
            <TextView 
    android:layout_width="12dp"
    android:layout_height="18dp"
    android:background="@drawable/lefttriangle"
    
    />
            <TextView
                android:id="@+id/MessageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chattextshapeleft"
                android:text="管理员管理员管理员管理员管理员管理员"
                android:maxWidth="200dp"
                 android:padding="5dp"/>
                

        </LinearLayout>
    </LinearLayout>

</LinearLayout>