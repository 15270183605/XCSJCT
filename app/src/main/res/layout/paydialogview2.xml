<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
      <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="365dp"
       android:orientation="vertical"
       >
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         >
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="×"
             android:textSize="35sp"
             android:textColor="#888282"
             android:layout_centerVertical="true"
             android:id="@+id/ClosePayDialog"
             />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="确认付款"
             android:textSize="17sp"
            android:layout_centerInParent="true"
             />
         <ImageView 
             android:id="@+id/PayReback"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@drawable/payreback"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="3dp"
             />
         
     </RelativeLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="#e5e5e5"
    />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="10dp"
   android:paddingRight="10dp"
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Layout"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView 
            android:id="@+id/PayJinE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.96"
            android:textSize="28sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单信息"
            android:textColor="#888282"
            android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/DindDanContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15270183605 手机缴费"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</RelativeLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="#e5e5e5"
    />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式"
            android:textColor="#888282"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/SelectPayCard"
        >
        <TextView 
            android:id="@+id/PayCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            />
       <ImageView 
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/payback2"
           android:layout_marginLeft="5dp"
           />
        </LinearLayout>
</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal"
    android:layout_marginTop="90dp"
    >
    <TextView 
        android:id="@+id/FuKuan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/backgroundshape"
        android:text="立即付款"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />
</LinearLayout>
</LinearLayout>

</LinearLayout>
