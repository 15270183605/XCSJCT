<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
        <LinearLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
     android:id="@+id/title1"
     android:layout_width="fill_parent"
     android:layout_height="30dp"
     android:background="#00a8f3"
     android:orientation="horizontal" 
     android:gravity="center_vertical">
   <ImageView 
         android:id="@+id/downlist"
         android:layout_width="28dp"
         android:layout_height="26dp"
         android:src="@drawable/downlist"
         android:layout_marginLeft="5dp"
         ></ImageView>
         
     <TextView
         android:id="@+id/addYear1"
         android:layout_width="13dp"
         android:layout_height="28dp"
         android:layout_marginLeft="7dp"
         android:text="+"
         android:textColor="#ff0000"
         android:textSize="20sp" />

     <TextView
         android:id="@+id/Year1"
         android:layout_width="28dp"
         android:layout_height="13dp"
         android:layout_marginLeft="7dp"
         android:text="2018"
         android:textColor="#ff0000"
         android:textSize="10sp" />

     <TextView
         android:layout_width="10dp"
         android:layout_height="15dp"
         android:text="年"
         android:textSize="10sp" />

     <TextView
         android:id="@+id/cutYear1"
         android:layout_width="15dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:text="——"
         android:textColor="#ff0000"
         android:textSize="25sp" />

     <View
         android:layout_width="2dp"
         android:layout_height="match_parent"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="5dp"
         android:background="#b83dba" />

     <TextView
         android:id="@+id/addMonth1"
         android:layout_width="13dp"
         android:layout_height="28dp"
         android:layout_marginLeft="7dp"
         android:text="+"
         android:textColor="#ff0000"
         android:textSize="20sp" />

     <TextView
         android:id="@+id/Month1"
         android:layout_width="15dp"
         android:layout_height="15dp"
         android:layout_marginLeft="7dp"
         android:text="06"
         android:textColor="#ff0000"
         android:textSize="10sp" />

     <TextView
         android:layout_width="10dp"
         android:layout_height="15dp"
         android:text="月"
         android:textSize="10sp" />

     <TextView
         android:id="@+id/cutMonth1"
         android:layout_width="15dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:text="——"
         android:textColor="#ff0000"
         android:textSize="25sp" />
     <EditText 
         android:id="@+id/seachMessage"
         android:layout_width="70dp"
         android:layout_height="20dp"
         android:background="@drawable/editbackgroundshape"
         android:layout_marginLeft="26dp"
         android:textSize="13sp"
         android:hint="仅填入几号"
         android:inputType="number"
         />
      <ImageView 
         android:id="@+id/seach"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/seach1"
         android:layout_marginLeft="3dp"
         ></ImageView> 
      
 </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >
       <TextView 
           android:id="@+id/DataTitle"
           android:layout_width="40dp"
           android:layout_height="20dp"
           android:text="收入"
           android:textSize="16sp"
           android:textColor="@android:color/holo_green_dark"
           android:textStyle="bold"
           android:layout_marginLeft="146dp"
           /> 
       <tool.CircleImageView
     android:layout_width="20dp"
     android:layout_height="20dp"
     android:src="@drawable/yuyinadd"
     android:id="@+id/SeachLuYin"
   
     android:layout_marginLeft="46dp"
     />
    </LinearLayout>

<LinearLayout
   
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   android:gravity="center"
    android:orientation="horizontal" 
    android:layout_marginTop="3dp">

    <ViewFlipper
        android:id="@+id/dataFlipper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp"
        android:background="@drawable/viewflipperstyle"
        /> 
    <LinearLayout 
        android:id="@+id/dataText"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" 
       >
       <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抱歉，当前暂无数据！"
        android:textColor="#ff0000"
        android:textSize="16sp"
           />
       </LinearLayout>
</LinearLayout>
<RelativeLayout 
    android:id="@+id/yemaLayout"
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
    <TextView 
       android:id="@+id/AuTo"
      android:layout_width="30dp"
       android:layout_height="18dp"
       android:text="自动"
       android:background="@drawable/beisushape"
       android:layout_alignParentLeft="true"
       android:textSize="11sp"
       android:layout_marginLeft="30dp"
       android:textStyle="bold"
      android:gravity="center"
       /> 
     <ImageView 
       android:id="@+id/GoPrevious"
       android:layout_width="30dp"
       android:layout_height="15dp"
       android:src="@drawable/next2"
       android:layout_marginLeft="80dp"
       /> 
   <TextView 
       android:id="@+id/yema"
       android:layout_width="80dp"
       android:layout_height="20dp"
       android:text="当前  1/5页"
       android:textStyle="italic"
       android:textSize="13sp"
       android:textColor="#ff0000"
       android:layout_centerHorizontal="true"
       /> 
     
    <ImageView 
       android:id="@+id/GoNext"
       android:layout_width="30dp"
       android:layout_height="15dp"
       android:src="@drawable/next1"
       android:layout_alignParentRight="true"
       android:layout_marginRight="80dp"
        
       /> 
       <TextView 
           android:id="@+id/beisuNumber"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:text="1.0"
           android:textSize="12sp"
           android:textColor="#ff0000"
           android:layout_marginRight="50dp"
            android:layout_alignParentRight="true" 
           android:visibility="gone"
           />
       <Button
       android:id="@+id/BeiSu"
       android:layout_width="30dp"
       android:layout_height="18dp"
       android:background="@drawable/beisushape"
       android:layout_alignParentRight="true" 
       android:layout_marginRight="15dp"
       android:text="倍速"
       android:textSize="12sp"
       android:textStyle="bold"
       android:visibility="gone"
       android:gravity="center"
       />
</RelativeLayout>
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="15dp"
    android:orientation="horizontal"
   android:layout_marginTop="10dp"
    android:gravity="center"
    
    >
      <TextView 
                android:layout_width="150dp"
                android:layout_height="15dp"
                android:text="[注：语音格式：只要月份1~12]"
                android:textColor="#ff0000"
                android:textSize="10sp"
               
                />
</LinearLayout>
</LinearLayout>
       </LinearLayout>
       
    <ListView
        android:id="@+id/lv"
        android:layout_width="80dp"
        android:layout_height="match_parent" 
        android:layout_gravity="start"
        android:background="#e5e5e5"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        />
</android.support.v4.widget.DrawerLayout>
