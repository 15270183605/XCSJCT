<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View 
       
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000000"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:id="@+id/Layout1">
         <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
         
        <TextView 
            android:id="@+id/CountClassText"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textSize="13sp"
           android:gravity="center"
            />
        </LinearLayout>
      
        <LinearLayout
            android:id="@+id/Layout2"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/Layout1" >
          <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        
         <TextView 
            android:id="@+id/CountNumText"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="总金额"
            android:textSize="13sp"
            android:textColor="#ff0000"
             android:gravity="center"
            />
         </LinearLayout>
        
        <LinearLayout
            android:id="@+id/Layout3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:layout_toRightOf="@+id/Layout2">
         <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
        
          <TextView 
            android:id="@+id/CountcountText"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="总笔数"
            android:textSize="13sp"
            android:textColor="#ff0000"
             android:gravity="center"
            />
          </LinearLayout>
         
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/Layout3"
             >
         <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />
           <TextView 
            android:id="@+id/CountDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="13sp"
            android:textColor="#3f48cc"
             android:gravity="center"
            />
           </LinearLayout>
           <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" 
            android:layout_alignParentRight="true"/>
       
        
    
</RelativeLayout>
</LinearLayout>
