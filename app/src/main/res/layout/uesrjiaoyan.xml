<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/editbackgroundshape"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <LinearLayout 
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份验证"
            android:textColor="#ff0000"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/TopLayout"
        >
        <LinearLayout 
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:textSize="15sp"
                />
            <EditText 
                android:id="@+id/UserNameEdit"
                android:layout_width="176dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:textSize="13sp"
                android:textColor="#ff0000"
              
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="2dp"
            />
         
          <LinearLayout 
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密    码:"
                android:textSize="15sp"
                />
            <EditText 
                android:id="@+id/UserPasswordEdit"
                android:layout_width="176dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:textSize="13sp"
                android:textColor="#ff0000"
              android:inputType="numberPassword"
                />
            
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="2dp"
            />
         <LinearLayout 
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:textSize="15sp"
                />
            <EditText 
                android:id="@+id/YanZhengMaEdit"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:textSize="13sp"
                android:textColor="#ff0000"
              
                />
            <TextView
                android:id="@+id/UserGetYanZhengMa"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="获取验证码"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:background="@drawable/textbackgroundshape"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/Layout"
    android:layout_marginRight="10dp"
    android:layout_marginTop="25dp"
    >
    <TextView 
        android:id="@+id/UserYanZheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证"
        android:textColor="#ff0000"
        android:textSize="13sp"
        />
    <TextView 
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ff0000"
        android:textSize="13sp"
        android:layout_marginLeft="50dp"
        />
</LinearLayout>
</RelativeLayout>
